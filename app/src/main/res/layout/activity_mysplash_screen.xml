<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.Mushaf.Quran.splash.Mysplash_screen">

     <com.airbnb.lottie.LottieAnimationView
         android:id="@+id/myi"
         android:layout_gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:lottie_fileName="lo.json"
         app:lottie_autoPlay="true"
         app:lottie_loop="true"

         android:layout_centerInParent="true"
    android:layout_margin="10dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:id="@+id/my_quran"
        android:text="كِتَابٌ أَنزَلْنَاهُ إِلَيْكَ مُبَارَكٌ لِّيَدَّبَّرُوا آيَاتِهِ وَلِيَتَذَكَّرَ أُولُو الْأَلْبَابِ"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/myi"
        android:layout_centerInParent="true"
        />



</LinearLayout>