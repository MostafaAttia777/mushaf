<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:background="@drawable/sha"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#d4af37"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="10dp"
            android:layout_alignRight="@id/name_of_sora"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="1"
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="الفاتحة"
            android:textColor="#d4af37"
            android:id="@+id/name_of_sora"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="مكيه"
            android:textColor="#d4af37"
            android:layout_below="@id/name_of_sora"
            android:id="@+id/kind_of_sora"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textSize="19sp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/number_of_peppr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#d4af37"
            android:textSize="22sp"
            android:textStyle="bold" />



    </RelativeLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>