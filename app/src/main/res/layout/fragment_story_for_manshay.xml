<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.Mushaf.Quran.Almanshay.Story_for_manshay">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:id="@+id/play_number_one_m"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="play"
                />
            <VideoView
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/play_number_one_m"
                android:id="@+id/video_number_one_m"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <Button
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/video_number_one_m"
                android:id="@+id/play_number_two_m"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="play"
                />
            <VideoView
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/play_number_two_m"
                android:id="@+id/video_number_two_m"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <Button
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/video_number_two_m"
                android:id="@+id/play_number_three_m"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="play"
                />
            <VideoView
                android:layout_below="@id/play_number_three_m"
                android:id="@+id/video_number_three_m"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_height="100dp"/>
            <Button
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/video_number_three_m"
                android:id="@+id/play_number_for_m"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="play"
                />
            <VideoView
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/play_number_for_m"
                android:id="@+id/video_number_for_m"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <Button
                android:layout_centerInParent="true"
                android:layout_below="@id/video_number_for_m"
                android:id="@+id/links_m"
                android:text="for more videos click here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>