<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
       android:background="@drawable/t3"
        tools:context="com.Mushaf.Quran.yasserAldoasery.test">

    <TextView
        android:textSize="10sp"
        android:layout_marginLeft="-30dp"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@id/myseek"
        android:layout_centerInParent="true"
        android:textColor="#FDFDFD"
        android:text="0:00"
        android:id="@+id/start_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="-30dp"
        android:textSize="10sp"

        android:id="@+id/end_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/myseek"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#FFF1F1" />

    <SeekBar
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/myseek"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
         />

    <ImageView
android:layout_centerInParent="true"
        android:id="@+id/ply"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/myseek"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:background="@drawable/shap"
        android:text="play" />


</RelativeLayout>